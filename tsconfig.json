{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@images/*": ["./src/images/*"],
      "@sass/*": ["./src/sass/*"],
      "@api/*": ["./src/ts/api/*"],
      "@components/*": ["./src/ts/components/*"],
      "@routes/*": ["./src/ts/routes/*"],
      "@SkillType": ["./src/ts/types/SkillType"],
      "@ProjectType": ["./src/ts/types/ProjectType"],
      "@hooks/*": ["./src/ts/hooks/*"],
      "@repository/*": ["./src/ts/repository/*"],
      "@utils/*": ["./src/ts/utils/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
